<div class="container-show m-0">
  <div class="row">
    <div class="col-lg-8">
      <!-- Isssue card -->
      <%= render "display-show", issue: @issue %>
      <!-- Social Media Buttons -->
      <br>
      <div class="share-btn" data-url="http://decide-for.me" data-title="Issue" data-desc="Share a issue with your friends">
        <a class="btn-facebook" data-id="fb"><i class="fab fa-facebook-square"></i> Facebook</a>
        <a class="btn-twitter" data-id="tw"><i class="fab fa-twitter"></i> Twitter</a>
        <a class="btn-telegram" data-id="tg"><i class="fab fa-telegram"></i> Telegram</a>
        <a class="btn-mail" data-id="mail"><i class="fas fa-at"></i> EMail</a>
      </div>
      <!-- Comments section -->
      <div class="mt-5" id="replies" data-chatroom-id="<%= @issue.id%>">
        <% @issue.replies.each do |reply| %>
          <%= render "replies/display-replies", reply: reply, issue: @issue %>
        <% end %>
      </div>
    </div>
    <!-- Form for comments -->
    <%= render "display-reply", issue: @issue %>
  </div>
</div>

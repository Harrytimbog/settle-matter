<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, label: false,
                required: false,
                autofocus: true,
                placeholder: "Username" %>
    <%= f.input :email, label: false,
                required: false,
                placeholder: "Email"%>
    <%= f.input :avatar, label: "Choose a profile picture", as: :file,
                input_html: { autocomplete: "new-password", class: "little-text" } %>
    <%= f.input :password, label: false,
                required: false,
                placeholder: ("Password (#{@minimum_password_length} characters minimum)" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: false,
                required: false,
                placeholder: "Confirm password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
